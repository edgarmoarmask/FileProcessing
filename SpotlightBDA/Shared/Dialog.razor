<MudDialog>
    <DialogContent>
        <MudTabs Elevation="2" Rounded="true" Style="min-height:500px;overflow:auto" ApplyEffectsToContainer="true" PanelClass="pa-6">
            
            @foreach (ResultStats res in ResultStatsList)
            {
                
                <MudTabPanel Text="@res.Filename" >
                    @foreach(string message in res.Messages)
                    {
                        <MudText>@message</MudText><br/>
                    }
                </MudTabPanel>
            }
        </MudTabs>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    
    [Parameter] 
    public List<ResultStats> ResultStatsList { get; set; } = new();

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}